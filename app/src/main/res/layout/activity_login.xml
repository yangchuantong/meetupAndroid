<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal">
        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="100dp">
            <TextView
                android:id="@+id/tv_login_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="登录"
                style="@style/black_00_48"/>
            <TextView
                android:id="@+id/tv_did"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                style="@style/black_00_28"
               android:text="您还未创建，请输入密码创建"
                />
            <EditText
                android:id="@+id/edt_password"
                android:text=""
                android:layout_width="250dp"
                android:layout_height="43dp"
                android:layout_marginTop="10dp"
                android:inputType="textPassword"
                android:background="@drawable/bg_shap_gray_border"
                android:hint="请输入密码至少8位"
                />
        </LinearLayout>


        <Button
            android:id="@+id/btn_login"
            android:layout_width="250dp"
            android:layout_height="43dp"
            android:gravity="center"
            android:background="@drawable/bg_shap_green"
            android:layout_marginTop="30dp"
            android:text="登录"
            style="@style/white_32_normal"/>

    </LinearLayout>
</LinearLayout>