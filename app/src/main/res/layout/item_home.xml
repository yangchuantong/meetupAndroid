<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<!--卡片式图文-->
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="15dp">
    <org.elastos.meetup.view.rounded.RoundedImageView
        android:id="@+id/img_assets"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:scaleType="fitXY"
        app:corner_radius="8dp">
    </org.elastos.meetup.view.rounded.RoundedImageView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
        android:id="@+id/tv_assets_title"
        android:text="亦来云生态应用发展座谈会--上海站"
        android:lines="2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/black_00_32"
        android:layout_marginTop="10dp"/>
        <ImageView
            android:id="@+id/img_used"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/icon_yishiyong"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:visibility="gone"
            />
    </RelativeLayout>

</LinearLayout>
</LinearLayout>