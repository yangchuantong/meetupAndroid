<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
<!--卡片式图文-->
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:orientation="horizontal"
    android:layout_marginLeft="25dp"
    android:layout_marginRight="25dp"
    android:gravity="center_vertical"
    >
<ImageView
    android:id="@+id/img_assets"
    android:src="@drawable/image_tx"
    android:layout_width="40dp"
    android:layout_height="wrap_content"
    android:adjustViewBounds="true"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_msg_friend"
                android:text="鲜鲜"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/black_00_30"/>
            <TextView
                android:id="@+id/tv_msg_date"
                android:layout_weight="1"
                android:text="2018-10-11 09:30"
                android:gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/gray_99_26_normal"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_msg_content"
            android:text="亦来云生态应用发展座谈会--上海站"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/gray_99_26_normal"
            android:layout_marginTop="10dp"/>
    </LinearLayout>

</LinearLayout>
    <TextView
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="@drawable/line"/>
</LinearLayout>